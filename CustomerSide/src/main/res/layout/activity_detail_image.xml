<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activities.DetailImageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/admintoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/action_backpressed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_backpressed" />

                <TextView
                    android:id="@+id/christmastext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Images"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textColor="@color/dark_cyan"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/action_backpressed"/>




            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/festival_imageview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:scaleType="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        >

        <ImageButton
            android:id="@+id/download_button"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/ic_download"
            android:layout_margin="10dp"
            android:backgroundTint="@color/light_cyan"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/ic_share"
            android:backgroundTint="@color/light_cyan"
            android:layout_margin="10dp"
            android:layout_weight="1"/>




    </LinearLayout>


</LinearLayout>